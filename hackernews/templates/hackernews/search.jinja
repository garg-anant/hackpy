	{% if filtered_links|length > 0 %}
  {% for filtered_link in filtered_links[::-1] %}
      <tr class="athing" id="">
      <td align="right" valign="top" class="title">
      	<span class="rank">
      	{{ loop.index }} &nbsp
      	</span>
      </td>
      <td valign="top" class="votelinks">
      </td>
      <td class="title">
      	<a href="{{ filtered_link.title_link }}" class="storylink">{{ filtered_link.title }}</a>
      	<span class="sitebit comhead"> (<a href=""><span class="sitestr">{{ filtered_link.base_url }}</span></a>)</span>
      	<tr><td colspan="2"></td>
      		<td class="subtext">
        	<span class="score" id="score_19580860">{{ filtered_link.karma_points }}</span> by <a href="#" class="hnuser">{{ filtered_link.posted_by }}</a> <span class="age">on <a href="{{ url('comments', newslink_id=filtered_link.id) }}">{{ filtered_link.time_posted.strftime("%d %B, %Y") }}</a></span> | <a href="{{ url('comments', newslink_id=filtered_link.id) }}">{{ filtered_link.num_comments }}&nbsp;comments</a>              
        	</td>
        </tr>
      <tr class="spacer" style="height:10px"></tr>
    {% endfor %}
    {% else %}
    <tr class="athing" id="">
      <td align="right" valign="top" class="title">
        <span class="rank">
        No Search items available &nbsp
        </span>
      </td>
    </tr>
    {% endif %}
		
